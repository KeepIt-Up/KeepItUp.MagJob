{
  "ConnectionStrings": {
    "DefaultConnection": "DEFAULT_CONNECTION_STRING"
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information"
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/log.txt",
          "rollingInterval": "Day"
        }
      }
    ]
  },
  "AllowedHosts": "*",
  "Mailserver": {
    "Server": "localhost",
    "Port": 25
  },
  "FileStorage": {
    "BasePath": "./wwwroot/uploads",
    "BaseUrl": "http://localhost:5000/api/identity/uploads"
  },
  "KeycloakAdmin": {
    "ServerUrl": "KEYCLOAK_SERVER_URL",
    "Realm": "keepitup-magjob",
    "ClientId": "keepitup-magjob-identity",
    "ClientSecret": "KEYCLOAK_CLIENT_SECRET",
    "RequireHttps": false,
    "TokenExpirationSeconds": 300,
    "TimeoutSeconds": 30,
    "AdminUsername": "admin",
    "AdminPassword": "admin",
    "AdminClientId": "admin-cli"
  },
  "KeycloakClient": {
    "ServerUrl": "KEYCLOAK_SERVER_URL",
    "Realm": "keepitup-magjob",
    "ClientId": "keepitup-magjob-client",
    "RequireHttps": false
  },
  "Cors": {
    "AllowedOrigins": [
      "http://localhost:4200",
      "http://localhost:80",
      "http://identity:5000",
      "http://localhost:5000"
    ]
  }
}
